@using GayChat.Extensions
@{
    ViewData["Title"] = "Home Page";
}

@inject SignInManager<ApplicationUser> SignInManager


@{
    string indexImage = "Tropical_Index";

    string marginTop = "60%";

    if (SignInManager.IsSignedIn(User))
    {
        indexImage = "SignedIn_Index";
        marginTop = "54%";
    }

    if (Context.Request.IsMobile())
    {
        indexImage += "_Mobile";
    }

}

@if (Context.Request.IsMobile())
{
    <div id="mainIndex" style="position: relative; width: 100%">

        <img src="~/images/@(indexImage + ".jpg")" style="position: absolute; top: 0px; left: 0px; width: 100%; height: 100%; filter: blur(2px)"/>

        <div style=" text-align: center; width: 320px; height: 50px; position: absolute; left: 50%; margin-left: -160px; margin-top: @marginTop">

            <h3 style="color: white; font-size: 31px; border-top: 1px solid white; border-bottom: 1px solid white; letter-spacing: 4px; width: 210px; margin: auto; padding: 2px">
                GAY CHAT
            </h3>

            

            @if (SignInManager.IsSignedIn(User))
            {
                <h5 style="color: white; margin-bottom: 10px; margin-top: 8px; font-family: bold italic">Start chatting with other GAYS</h5>

                <div style="width: 240px; height: 100px; margin: auto;">

                    <a class="waves-effect waves-light btn" href="/Account/FindUsers" style="width: 150px; background-color: transparent; border: 1px solid white; padding: 0px;">New Friends</a>

                    <a class="waves-effect waves-light btn" href="/Account/Contacts" style="width: 125px; background-color: transparent; border: 1px solid white; padding: 0px; margin-top: 8px">Contacts</a>

                </div>
            }
            else
            {
                <h5 style="color: white; margin-bottom: 10px; margin-top: 8px; font-family: bold italic">A new way of GAY chating</h5>

                <div style="width: 230px; height: 60px; margin: auto;">

                    <a class="waves-effect waves-light btn" href="/Account/Login" style="float: left; width: 105px; background-color: transparent; padding: 0px; border: 1px solid white">Sign in </a>

                    <a class="waves-effect waves-light btn" href="/Account/Register" style="float: right; width: 105px; background-color: transparent; padding: 0px; border: 1px solid white">Sign up</a>

                </div>
            }

            
        </div>

    </div>

}

else
{
    <div id="mainIndex" style="position: relative; width: 100%;">

        <img src="~/images/@(indexImage + ".jpg")" style="position: absolute; top: 0px; left: 0px; width: 100%; height: 100%; filter: blur(0px)" />

        <div class="inner" style="position: absolute; width: 800px; height: 50px; margin-top: 17%; text-align: center">
            <h2 style="color: white; border-top: 1px solid white;  border-bottom: 1px solid white; letter-spacing: 4px; width: 320px; margin: auto">
                GAY CHAT
            </h2>

            <h4 style="color: white; margin-bottom: 15px; font-family: bold italic">A new way of GAY chating</h4>

            @if (SignInManager.IsSignedIn(User))
            {
                <div style="width: 420px; height: 60px; margin: auto;">

                    <a class="waves-effect waves-light btn btn-large" href="/Account/FindUsers" style="float: left; width: 180px; background-color: transparent; border: 1px solid white">New Friends </a>

                    <a class="waves-effect waves-light btn btn-large" href="/Account/Contacts" style="float: right; width: 180px; background-color: transparent; border: 1px solid white">Contacts</a>

                </div>
            }
            else
            {
                <div style="width: 370px; height: 60px; margin: auto;">

                    <a class="waves-effect waves-light btn btn-large" href="/Account/Login" style="float: left; width: 150px; background-color: transparent; border: 1px solid white">Sign in </a>

                    <a class="waves-effect waves-light btn btn-large" href="/Account/Register" style="float: right; width: 150px; background-color: transparent; border: 1px solid white">Sign up</a>

                </div>
            }

        </div>

    </div>


    <style>
        .inner {
            left: 50%;
            margin-left: -400px;
        }
    </style>
}
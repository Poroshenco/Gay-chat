@inject UserManager<ApplicationUser> Manager

@model List<ApplicationUser>

    <div class="container" style="margin-top: 30px; box-shadow: 0px 5px 15px rgba(0,0,0,0.5)">

        <ul class="collection">
            @foreach (var user in Model)
            {
                string image = user.Nickname.Substring(1).Replace(" ", string.Empty) + ".jpg";

                <li class="collection-item avatar" style="background-color: white;">
                    <img src="~/UserImages/@image" style="border: 2px solid #03a9f4; width: 70px; height: 70px" class="circle">
                    <span class="title" style="margin-left: 20px;">@user.FirstName @user.Surname</span>
                    <p style="margin-left: 20px; font-size: 12px">
                        @user.Nickname <br>
                        @user.Email
                    </p>
                    <a href="/Account/DeleteUser?id=@user.Id" class="secondary-content waves-effect waves-light btn" style=" padding: 0px; padding-left: 10px; padding-right: 10px; background-color: #e53935 "><i class="material-icons">delete</i></a>
                </li>
            }
        </ul>
    </div>
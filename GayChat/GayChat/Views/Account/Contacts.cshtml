@using System.Net.Http
@using GayChat.Extensions
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Contacts";
}

@inject UserManager<ApplicationUser> UserManager

@{
    string tabsGrid = "col s8 offset-s2 ";
    string tabsFontSize = "18px";

    if (Context.Request.IsMobile())
    {
        tabsGrid = "col s12";
        tabsFontSize = "14px";
    }
}


<div class="container" style="margin-top: 40px">
        <div class="row @tabsGrid">
            <div class="col s12" style="padding: 0px;">
                <ul id="swipeable-tabs" class="tabs" style="border: 1px solid #40c4ff; border-bottom: 0; ">
                    <li class="tab col s4"><a href="#test1" style="font-size: @tabsFontSize">Friends</a></li>
                    <li class="tab col s4"><a href="#test2" style="font-size: @tabsFontSize">Invitations</a></li>
                    <li class="tab col s4"><a href="#test3" style="font-size: @tabsFontSize">Subscribers</a></li>
                </ul>
            </div>


            <div id="test1" class="col s12 contactsTag">
                <div class="contactsTagInner">

                </div>
            </div>


            <div id="test2" class="col s12 contactsTag">
                <div class="contactsTagInner">

                </div>
            </div>


            <div id="test3" class="col s12 contactsTag">
                <div class="contactsTagInner">

                </div>
            </div>
        </div>
    </div>

    <style>

        .contactsTag {
            border: 10px solid #40c4ff;
            border-top: 0px;
        }

        .contactsTagInner {
            margin: 20px;
            border: 1px solid red;
            height: 200px;
        }

    </style>

